<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:paddingLeft="24dp"
    android:paddingRight="24dp"
    android:scrollbars="none"> <!--per far scomparire lo scroll bar-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlBabySitter"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivBabysitter"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/babysitter">
            </ImageView>
            <TextView
                android:id="@+id/tvBabysitter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/babysitter"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlDogSitter"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivDogsitter"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dogsitter">
            </ImageView>
            <TextView
                android:id="@+id/tvDogsitter"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/dogsitter"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivColf"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/pulizie">
            </ImageView>
            <TextView
                android:id="@+id/tvColf"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/colf"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivInfermiere"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/infermiera">
            </ImageView>
            <TextView
                android:id="@+id/tvInfermiere"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/infermiere"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivBadante"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/badante">
            </ImageView>
            <TextView
                android:id="@+id/tvBadante"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/badante"
                android:textColor="#000000"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlCommissioni"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivCommissioni"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/commissioni">
            </ImageView>
            <TextView
                android:id="@+id/tvCommissioni"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/commissioni"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivCompagnia"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/compagnia">
            </ImageView>
            <TextView
                android:id="@+id/tvCompagnia"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/compagnia"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlRipetizioni"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:background="@drawable/shape_layout_btn">
            <ImageView
                android:id="@+id/ivRipetizioni"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ripetizioni">
            </ImageView>
            <TextView
                android:id="@+id/tvRipetizioni"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/black"
                android:text="@string/ripetizioni"
                android:textAppearance="@style/TextAppearance.AppCompat">
            </TextView>
        </RelativeLayout>
    </LinearLayout>
</HorizontalScrollView>